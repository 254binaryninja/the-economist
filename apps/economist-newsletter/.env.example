# Environment Configuration
NODE_ENV=development
PORT=3000

# API Keys (Required)
RESEND_API_KEY=your_resend_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_generative_ai_api_key_here

# Security
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_here

# Database (Optional)
DATABASE_URL=your_database_url_here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600000

# Newsletter Configuration
DEFAULT_FROM_EMAIL=newsletter@yourdomain.com
DEFAULT_FROM_NAME=The Economist Newsletter

# RSS Feed Sources (comma-separated)
RSS_FEEDS=https://feeds.reuters.com/reuters/businessNews,https://feeds.bbci.co.uk/news/business/rss.xml

# AI Content Generation
AI_MODEL=gemini-1.5-flash
MAX_TOKENS=4000

# Email Templates
WELCOME_EMAIL_TEMPLATE_ID=1
NEWSLETTER_TEMPLATE_ID=2
UNSUBSCRIBE_TEMPLATE_ID=3

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
